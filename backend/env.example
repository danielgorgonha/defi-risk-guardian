# DeFi Risk Guardian - Environment Variables

# App Settings
APP_NAME=DeFi Risk Guardian
VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL="postgresql://defi_user:defi_password@localhost:5432/defi_risk"

# Redis
REDIS_URL=redis://localhost:6379

# Stellar
STELLAR_NETWORK=testnet
HORIZON_URL=https://horizon-testnet.stellar.org

# Reflector Oracle
REFLECTOR_API_URL=https://reflector-api.stellar.org
REFLECTOR_API_KEY=your_reflector_api_key_here

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS='["http://localhost:3000","http://localhost:3001","https://riskguardian.vercel.app"]'

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ML Models
ANOMALY_CONTAMINATION=0.1
VAR_CONFIDENCE_LEVEL=0.95
REBALANCE_THRESHOLD=0.05
